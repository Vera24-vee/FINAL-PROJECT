extends layout2.pug

block content
  .flex.h-screen
    aside.w-60.text-white.p-8.shadow-lg(class='bg-[#000c1f] shadow-cyan-300/30')
      h2.text-2xl.text-center.text-cyan-400.mb-8 KGL Director
      ul.space-y-4
        li
          a.flex.items-center.gap-2.text-white.border-cyan-400.px-2.py-2.rounded-md(href='/overview' class='hover:text-cyan-400 hover:bg-cyan-200/10 hover:border-l-4')
            i(data-lucide='layout-dashboard')  // Icon for Overview
            |  Overview
        li
          a.flex.items-center.gap-2.text-white.border-cyan-400.px-2.py-2.rounded-md(href='/signup' class='hover:text-cyan-400 hover:bg-cyan-200/10 hover:border-l-4')
            i(data-lucide='user-plus')
            | Add User
        li
          a.flex.items-center.gap-2.text-white.border-cyan-400.px-2.py-2.rounded-md(href='/userTable' class='hover:text-cyan-400 hover:bg-cyan-200/10 hover:border-l-4')
            i(data-lucide='users')
            | Users Table
        li
          a.flex.items-center.gap-2.text-white.border-cyan-400.px-2.py-2.rounded-md(href='/reports' class='hover:text-cyan-400 hover:bg-cyan-200/10 hover:border-l-4')
            i(data-lucide='boxes')  // Icon for Stock Report
            |  Stock Report
        li
          a.flex.items-center.gap-2.text-white.border-cyan-400.px-2.py-2.rounded-md(href='/logout' class='hover:text-cyan-400 hover:bg-cyan-200/10 hover:border-l-4')
            i(data-lucide='log-out')  // Icon for Log Out
            |  Log Out

    main.flex-1.p-8.overflow-y-auto(class='shadow-inner shadow-cyan-300/10')
      header.mb-6
        h1.text-3xl.text-cyan-400.font-bold.mb-2
          | KGL: 
          span.text-white Directorâ€™s Overview
        p.text-cyan-100 Insight into all branch activities

      section.grid.grid-cols-1.gap-6(class='sm:grid-cols-2 lg:grid-cols-4')
        .rounded-xl.p-6.text-center.text-white.shadow-md.transform.transition(class='bg-[#0e223f] shadow-cyan-400/30 hover:shadow-cyan-400/50 hover:-translate-y-1')
          h3.text-xl.text-cyan-400.mb-1 Total Revenue (UGX)
          p#total-revenue.text-cyan-100.text-sm Loading...
        .rounded-xl.p-6.text-center.text-white.shadow-md.transform.transition(class='bg-[#0e223f] shadow-cyan-400/30 hover:shadow-cyan-400/50 hover:-translate-y-1')
          h3.text-xl.text-cyan-400.mb-1 Credit Balance by Branch
          ul#credit-balance-by-branch.list-disc.pl-4.text-cyan-100.text-sm
            li Loading...
        .rounded-xl.p-6.text-center.text-white.shadow-md.transform.transition(class='bg-[#0e223f] shadow-cyan-400/30 hover:shadow-cyan-400/50 hover:-translate-y-1')
          h3.text-xl.text-cyan-400.mb-1 Sales by Branch
          ul#sales-by-branch.list-disc.pl-4.text-cyan-100.text-sm
            li Loading...
        .rounded-xl.p-6.text-center.text-white.shadow-md.transform.transition.border-l-4.border-red-500(class='bg-[#0e223f] shadow-cyan-400/30 hover:shadow-cyan-400/50 hover:-translate-y-1')
          h3.text-xl.text-red-400.mb-1 Stock by Branch
          ul#stock-by-branch.list-disc.pl-4.text-cyan-100.text-sm
            li Loading...

      section.grid.grid-cols-1.gap-8.mt-10(class='lg:grid-cols-2')
        .p-6.rounded-xl.shadow-lg.transition(class='bg-[#0e223f] shadow-cyan-400/20 hover:shadow-cyan-400/40')
          h3.text-cyan-400.font-bold.mb-4 Branch Sales Chart
          canvas#branchSalesChart(height='200')
          p.text-cyan-100.text-sm.text-center.mt-4 #branch-sales-loading Loading chart...
        .p-6.rounded-xl.shadow-lg.transition(class='bg-[#0e223f] shadow-cyan-400/20 hover:shadow-cyan-400/40')
          h3.text-cyan-400.font-bold.mb-4 Stock Distribution Chart
          canvas#overallStockChart(height='200')
          p.text-cyan-100.text-sm.text-center.mt-4 #overall-stock-loading Loading chart...

  script(src='https://unpkg.com/lucide@latest')
  script.
    lucide.createIcons()
  script(src="https://cdn.jsdelivr.net/npm/chart.js")
  script(src='/js/director.js')